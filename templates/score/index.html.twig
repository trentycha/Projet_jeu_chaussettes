{% extends 'base.html.twig' %}

{% block title %}Hello ScoreController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des scores</h1>

    <a href="{{ path('add_score') }}" class="btn">Ajouter un score</a>

    <ul>
        {% for score in scores %}
            <li>{{ score.name }} - {{ score.time }} secondes</li>
        {% else %}
            <li>Aucun score trouv√©.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
