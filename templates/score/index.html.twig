{% extends 'base.html.twig' %}

{% block title %}Hello ScoreController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<a href="{{ path('app_home') }}">Retour à la page d'accueil</a>

<div id="scoreContainer">
    <h1>Classement des meilleurs temps</h1>

    <div id="scoreList">
        <ul>
            {% for score in scores %}
                <li>{{ score.name }} - {{ score.time|number_format(2, ',', ' ') }} secondes</li>
            {% else %}
                <li>Aucun score trouvé.</li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
