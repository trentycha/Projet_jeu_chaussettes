{% extends 'base.html.twig' %}

{% block title %}Wanted Game{% endblock %}

{% block body %}

<div id="header">
    <div>
        <img id="tirroir" src="{{ asset('img/tirroir.png') }}" alt="Un tiroir">
        <img id="bleue" src="{{ asset('img/chaussette-bleu.png') }}" alt="Un tiroir">
        <p id="chrono">00:00:000</p>
    </div>

    
<div id="chaussettes" 
     data-image="{{ asset('img/chaussette.png') }}"
     data-special="{{ asset('img/chaussette-bleu.png') }}"
     data-hover="{{ asset('img/chaussette-bleu-select.png') }}"
     data-hover-fausse="{{ asset('img/chaussette-paire-1.png') }}">
</div>

<div>
    <button class="btn" ><a href="{{ path('app_home') }}" ="btnJeu">Accueil</a></button>
</div>

{# ECRAN DE FIN DE JEU #}

<div id="endgame">
<h2>Bravo !</h2>
<p>Vous avez trouvé la chaussette !</p>



<p>Entrez votre nom pour enregistrer votre score :</p>
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.time) }}
        <button class="btn">Ajouter</button>
    {{ form_end(form) }}

<h3>Voici les meilleurs temps : </h3>
<ul id="best-times">
    <!-- Les meilleurs temps seront insérés ici dynamiquement -->
    {% for score in bestScores %}
        <li>{{ score.name }} - {{ score.time }} secondes</li>
    {% else %}
        <li>Aucun score trouvé.</li>
    {% endfor %}
</ul>

<button class="btn" ><a href="{{ path('game') }}" ="btnJeu">Recommencer</a></button>
</div>

{# ECRAN GAMEOVER #}
<div id="gameover">
    <h2>Game Over</h2>
    <p>Vous avez perdu !</p>
    <button class="btn" ><a href="{{ path('game') }}" ="btnJeu">Recommencer</a></button>
</div>

{% endblock %}

